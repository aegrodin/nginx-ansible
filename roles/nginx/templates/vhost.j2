server {
    listen 80;
    server_name {{  ngx_server_name  }} www.{{  ngx_server_name  }};

    access_log /srv/www/{{  ngx_server_name  }}/logs/{{  ngx_server_name  }}-acc main;
    error_log /srv/www/{{  ngx_server_name  }}/logs/{{  ngx_server_name  }}-err;

    client_max_body_size 256m;

    location / {
        proxy_pass {{ ngx_upstream }};
        proxy_set_header Proxy "";
        proxy_redirect off;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_read_timeout 300;
        proxy_buffer_size 16k;
        proxy_buffers 32 16k;
    }

    location ~* \.(jpg|jpeg|gif)$ {
        expires 7d;
        access_log off;
        log_not_found off;
        root /srv/www/{{  ngx_server_name  }}/htdocs;
    }
}